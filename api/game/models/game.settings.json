{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "Game"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "release_date": {
      "type": "date",
      "required": false
    },
    "rating": {
      "type": "enumeration",
      "enum": [
        "EVERYONE",
        "pegi3",
        "pegi7",
        "pegi12",
        "pegi16",
        "pegi18"
      ],
      "required": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "gallery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
